<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.AppBarLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/Theme.Gwent.AppBarOverlay">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="?attr/colorPrimary"
        app:layout_scrollFlags="scroll|enterAlways|snap"
        app:popupTheme="@style/Theme.Gwent.PopupOverlay" />

    <com.jamieadkins.gwent.deck.list.DeckBriefSummaryView
        android:id="@+id/deck_summary_brief"
        android:layout_width="match_parent"
        android:paddingTop="4dp"
        android:layout_height="48dp"
        style="@style/Theme.Gwent.AppBarOverlay"/>

</android.support.design.widget.AppBarLayout>