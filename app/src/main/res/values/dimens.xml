<resources>
    <!-- Default screen margins, per the Android Design guidelines. -->
    <dimen name="activity_horizontal_margin">16dp</dimen>
    <dimen name="activity_vertical_margin">16dp</dimen>
    <dimen name="fab_margin">16dp</dimen>

    <!--On pre-Lollipop, CardView adds padding to its content to draw shadows to that area. -->
    <dimen name="card_margin_horizontal">-3dp</dimen>
    <!-- Can apply normal margin here. -->
    <dimen name="card_margin_vertical">4dp</dimen>
    <dimen name="bb_padding">52dp</dimen>

    <!-- Since the bottom bar is elevated, placing the snackbar above it leaves a small gap. -->
    <!-- Setting a negative margin removes that gap. -->
    <dimen name="snackbar_margin">-5dp</dimen>

    <dimen name="card_image_pixel_negation_vertical">-25px</dimen>
    <dimen name="card_image_pixel_negation_horizontal">-150px</dimen>

    <dimen name="tablayout_height">48dp</dimen>
    <dimen name="toolbar_height">56dp</dimen>
    <dimen name="toolbar_and_tabs_height">104dp</dimen>
    <dimen name="dialog_padding_horizontal">24dp</dimen>
    <dimen name="menu_item_height">48dp</dimen>
</resources>
