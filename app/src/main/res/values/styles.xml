<resources>

    <!-- Base application theme. -->
    <style name="Base.Theme.Gwent" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/gwentGreen</item>
        <item name="colorPrimaryDark">@color/gwentGreenDark</item>
        <item name="colorAccent">@color/gwentAccent</item>
        <item name="preferenceTheme">@style/PreferenceFragment.Material</item>
    </style>

    <style name="Theme.Gwent" parent="Base.Theme.Gwent">
        <!-- Don't need to do anything here. Used for API level changes. -->
    </style>

    <style name="Theme.Gwent.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Gwent.NoActionBar.Full">
        <item name="android:windowBackground">@color/gwentGreen</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Theme.Gwent.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="Theme.Gwent.PopupOverlay" parent="ThemeOverlay.MaterialComponents" />

    <style name="Widget.BottomNavigationView.Gwent" parent="Widget.Design.BottomNavigationView">
        <item name="android:fontFamily">@font/gwent</item>
    </style>

    <style name="GwentTextAppearance">
        <item name="android:fontFamily">@font/gwent</item>
    </style>
</resources>
