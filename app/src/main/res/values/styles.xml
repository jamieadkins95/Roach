<resources>

    <!-- Base application theme. -->
    <style name="Base.Theme.Gwent" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/gwentGreen</item>
        <item name="colorPrimaryDark">@color/gwentGreenDark</item>
        <item name="colorAccent">@color/gwentAccent</item>
        <item name="preferenceTheme">@style/PreferenceFragment.Material</item>
    </style>

    <style name="Theme.Gwent" parent="Base.Theme.Gwent">
        <!-- Don't need to do anything here. Used for API level changes. -->
    </style>

    <style name="Theme.Gwent.Skellige">
        <item name="colorPrimary">@color/skellige</item>
        <item name="colorPrimaryDark">@color/skelligeDark</item>
        <item name="android:textColor">@color/skellige</item>
    </style>

    <style name="Theme.Gwent.Monsters">
        <item name="colorPrimary">@color/monsters</item>
        <item name="colorPrimaryDark">@color/monstersDark</item>
        <item name="android:textColor">@color/monsters</item>
    </style>

    <style name="Theme.Gwent.NorthernRealms">
        <item name="colorPrimary">@color/northernRealms</item>
        <item name="colorPrimaryDark">@color/northernRealmsDark</item>
        <item name="android:textColor">@color/northernRealms</item>
    </style>

    <style name="Theme.Gwent.Scoiatael">
        <item name="colorPrimary">@color/scoiatael</item>
        <item name="colorPrimaryDark">@color/scoiataelDark</item>
        <item name="android:textColor">@color/scoiatael</item>
    </style>

    <style name="Theme.Gwent.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Gwent.NoActionBar.Drawer">
        <item name="material_drawer_background">@color/material_drawer_background</item>
        <item name="material_drawer_primary_text">@color/material_drawer_primary_text</item>
        <item name="material_drawer_primary_icon">@color/material_drawer_primary_icon</item>
        <item name="material_drawer_secondary_text">@color/material_drawer_secondary_text</item>
        <item name="material_drawer_hint_text">@color/material_drawer_hint_text</item>
        <item name="material_drawer_divider">@color/gwentGreenLight</item>
        <item name="material_drawer_selected">@color/material_drawer_selected</item>
        <item name="material_drawer_selected_text">@color/gwentGreen</item>
        <item name="material_drawer_header_selection_text">@color/gwentAccent</item>
    </style>

    <style name="Theme.Gwent.NoActionBar.Full">
        <item name="android:windowBackground">@color/gwentGreen</item>
    </style>

    <style name="Theme.Gwent.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Gwent.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
